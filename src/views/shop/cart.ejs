<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Carrito | Funkoshop</title>
    <link href="/assets/css/style.css" rel="stylesheet" />
    <link rel="stylesheet" href="/assets/css/style-cart.css" />
    <link
      rel="shorcut icon"
      href="/assets/img/branding/isotype.svg"
      type="image/x-icon"
    />
  </head>
  <body>
    <%- include('../partials/hShop') %>
    <main>
      <h1 class="cart-title">Carrito de compras</h1>
      <div class="cart-table">
        <div class="cart-header card-background">
          <p class="cart-header-title">Detalle del Producto</p>
          <p class="cart-header-title">Cantidad</p>
          <p class="cart-header-title">Total</p>
          <span class="cart-empty-header"></span>
        </div>
        <ul class="cart-product-items">
          <% cartItems.forEach((item) => { %>
          <li class="product-item card-background">
            <div class="item-detail">
              <img src="<%= item.imageSrc %>" alt="<%= item.imageAlt %>" />
              <div class="item-description">
                <h3 class="item-title"><%= item.title %></h3>
                <p class="item-category"><%= item.collectionTitle %></p>
                <p class="item-price">
                  Precio: $ <span><%= item.price %></span>
                </p>
              </div>
            </div>

            <div class="item-quantity quantity-action-wrapper">
              <input type="number" id="quantity" value="0" />
              <div class="quantity-action">
                <button id="add">
                  <img
                    src="../../assets/img/icons/plus-icon.svg"
                    alt="icono agregar"
                  />
                </button>
                <button id="subtract">
                  <img
                    src="../../assets/img/icons/minus-icon.svg"
                    alt="icono quitar"
                  />
                </button>
              </div>
            </div>

            <div class="item-total">
              <p class="item-total-price">$0.00</p>
            </div>

            <button class="delete-button" aria-label="Eliminar articulo">
              <img
                src="../../assets/img/icons/close-icon.svg"
                alt="icono eliminar"
              />
            </button>
          </li>
          <% }); %>
        </ul>
      </div>

      <div class="cart-summary-wrapper">
        <h2 class="cart-title">Resumen</h2>

        <div class="cart-summary card-background">
          <div class="cart-summary-detail">
            <div class="cart-quantity summary-item">
              <p class="summary-subtitle">Cantidad de elementos</p>
              <p class="summary-paragraph">3</p>
            </div>
            <div class="cart-subtotal summary-item">
              <p class="summary-subtitle">Subtotal</p>
              <p class="summary-paragraph">$5399,97</p>
            </div>
            <div class="cart-shipping summary-item">
              <p class="summary-subtitle">Envio</p>
              <p class="summary-paragraph">$0,00</p>
            </div>
          </div>
          <div class="cart-total summary-item">
            <p class="summary-subtitle">Total</p>
            <p class="summary-paragraph">$5399,97</p>
          </div>
        </div>

        <a class="btn-primary" href="#">Ir a pagar</a>
      </div>
    </main>
    <%- include('../partials/fShop') %>
    <script src="https://cdn.jsdelivr.net/npm/iconify-icon@1.0.8/dist/iconify-icon.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@glidejs/glide"></script>
    <script src="/assets/js/slider.js"></script>
    <script src="/assets/js/buttons.js"></script>
    <script src="/assets/js/calculateTotal.js"></script>
    <script src="/assets/js/cart.js"></script>
  </body>
</html>
