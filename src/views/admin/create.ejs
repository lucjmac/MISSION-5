<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Create | Funkoshop</title>
    <link rel="stylesheet" href="/assets/css/style.css" />
    <link rel="stylesheet" href="/assets/css/style-create.css" />
    <link rel="stylesheet" href="/assets/css/style-edit.css" rel="stylesheet" />
    <link
      rel="shorcut icon"
      href="/assets/img/branding/isotype.svg"
      type="image/x-icon"
    />
  </head>
  <body>
    <%- include('../partials/hAdm') %>
    <!-- Inicio Main -->
    <div class="container-create">
      <div class="creacion">CREAR NUEVO ITEM</div>
      <form class="form-container form-create">
        <fieldset>
          <div class="form-sub-container">
            <label class="label-select" for="category_id">Categoría </label>
            <select
              class="categoria-select"
              name="category_id"
              id="category_id"
              required
            >
              <option>Seleccionar</option>
              <option value="1">Figuras</option>
              <option value="2">Llaveros</option>
              <option value="3">Remeras</option>
            </select>

            <label for="licence_id"
              >Licencia
              <select
                required
                class="licencia-select"
                name="licence_id"
                id="licence_id"
              >
                <option>Seleccionar</option>
                <option value="2">STAR WARS</option>
                <option value="1">POKEMON</option>
                <option value="3">HARRY POTTER</option>
              </select>
            </label>
          </div>
        </fieldset>

        <fieldset>
          <div class="form-sub-container input-wrapper">
            <label for="product_name">Nombre del producto:</label>
            <input
              required
              type="text"
              id="product_name"
              name="product_name"
              value=""
            />
          </div>

          <div class="form-sub-container">
            <textarea
              required
              class="product_description"
              name="product_description"
              id="product_description"
              cols="30"
              rows="10"
            ></textarea>
          </div>
        </fieldset>

        <fieldset>
          <div class="form-container-selects">
            <div class="form-sub-container input-wrapper">
              <label for="sku">SKU:</label>
              <input
                required
                class=""
                id="sku"
                name="sku"
                type="text"
                value=""
              />
            </div>

            <div class="form-sub-container input-wrapper">
              <label for="price">Precio: </label>
              <input
                required
                class=""
                id="price"
                name="price"
                type="text"
                value=""
              />
            </div>

            <div class="form-sub-container input-wrapper">
              <label for="stock">Stock: </label>
              <input
                required
                class=""
                id="stock"
                name="stock"
                type="text"
                value=""
              />
            </div>
          </div>
        </fieldset>

        <fieldset>
          <div class="form-container-selects">
            <div class="form-sub-container input-wrapper">
              <label for="discount">Descuento: </label>
              <input
                class=""
                id="discount"
                name="discount"
                type="text"
                value="0"
              />
            </div>
            <div class="form-sub-container">
              <label for="dues"
                >Cuotas
                <select required class="cuota-select" name="dues" id="dues">
                  <option value="1">1 Cuota sin interés</option>
                  <option value="2">2 Cuotas sin interés</option>
                  <option value="3">3 Cuotas sin interés</option>
                  <option value="6">6 Cuotas sin interés</option>
                </select>
              </label>
            </div>
          </div>
        </fieldset>
        <fieldset>
          <div class="form-sub-container">
            <label for="image_Front">Imágenes:</label>
            <input
              class=""
              id="image_Front"
              name="image_Front"
              type="file"
              value=""
            />
          </div>
          <div class="form-sub-container">
            <label for="image_Back">Imágenes:</label>
            <input
              class=""
              id="image_Back"
              name="image_Back"
              type="file"
              value=""
            />
          </div>
        </fieldset>

        <!-- !ACA APARECEN LAS IMAGENES DE LOS ARCHIVOS -->

        <div class="form-sub-container" id="gallery-container">
          <div class="card-gallery">T0D0</div>
        </div>

        <div class="form-botonera">
          <input class="btn-primary" type="submit" value="Agregar Producto" />
          <input class="btn-primary" type="reset" value="Limpiar" />
        </div>
      </form>
    </div>
    <!--Fin Creacion-->
    <%- include('../partials/fAdm') %>
    <script src="https://cdn.jsdelivr.net/npm/iconify-icon@1.0.8/dist/iconify-icon.min.js"></script>
    <script src="/assets/js/adminCreateProduct.js"></script>
  </body>
</html>
